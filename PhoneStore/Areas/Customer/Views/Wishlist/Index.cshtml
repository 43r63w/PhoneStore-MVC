@model IEnumerable<Wishlist>

<div class="container">
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
            <div class="row px-4">
                <div class="col-6">
                    <h5 class="pt-2 text-white text-center">
                        Список бажаного
                    </h5>
                </div>
                <div class="col-6 text-end">
                </div>
            </div>
        </div>
    </div>
    <div class="card-body my-4">
        <div class="row">
        </div>
        <div class="row mb-3 pb-3">
            <div class="col-md-2 offset-md-1">
                <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">До списку товару</a>
            </div>
            <div class="col-md-10 offset-md-1">

                @foreach (var item in Model)
                {
                    <div class="row border-bottom pb-3">
                        <div class="d-none d-lg-block col-lg-1 text-center py-2">
                            @if (item.Product.ProductImages != null)
                            {
                                <img src="@item.Product.ProductImages.FirstOrDefault().ImageUrl" class="rounded" width="100%" />
                            }
                            else
                            {
                                <img src="https://placehold.co/600x400" class="rounded" width="100%" />
                            }
                        </div>
                        <div class="col-12 col-lg-6 pt-md-3">
                            <h5 class="text-uppercase text-secondary"><strong>@item.Product.Name @item.Product.Model</strong></h5>
                            <p><small>@Html.Raw(item.Product.Description)</small></p>
                        </div>
                        <div class="col-12  col-lg-5 text-center row">
                            <div class="col-3 text-md-right pt-2 pt-md-4">
                                <h6 class="fw-semibold">
                                    @item.Product.Price.ToString("c");
                                </h6>
                            </div>
                            <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-action="AddToCart" asp-route-productId="@item.Product.Id" class="btn btn-outline-primary bg-gradient py-2">
                                        <i class="bi bi-bag-plus"></i>
                                    </a>
                                </div>

                            </div>
                            <div class="col-3 col-sm-4 col-lg-2 offset-lg-1 text-right pt-2">
                                <a asp-action="Delete" asp-route-wishId="@item.Id" class="btn btn-danger bg-gradient py-2 ">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>

